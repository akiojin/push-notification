{
  "name": "akiojin/push-notification",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo-level tooling (lint/hooks) for push notification platform components",
  "packageManager": "npm@10.8.2",
  "scripts": {
    "prepare": "husky",
    "lint:md": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\" --ignore \"**/dist/**\" --ignore \"**/coverage/**\" --ignore \"**/.worktrees/**\"",
    "lint:md:fix": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\" --ignore \"**/dist/**\" --ignore \"**/coverage/**\" --ignore \"**/.worktrees/**\" --fix",
    "lint:server": "npm --prefix server run lint",
    "lint:ios": "bash scripts/lint-ios.sh",
    "lint:android": "bash scripts/lint-android.sh",
    "lint:unity": "bash scripts/lint-unity.sh",
    "check:all": "npm run lint:md && npm run lint:server && npm run lint:ios && npm run lint:android && npm run lint:unity"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.0.0",
    "markdownlint-cli": "^0.45.0"
  }
}
