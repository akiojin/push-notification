# Server basics
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/push_notification?schema=public

# Authentication
API_KEY=change-me

# Rate limiting (Fastify rate-limit plugin)
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=1 minute

# Delivery retry worker
DELIVERY_RETRY_INTERVAL_MS=1000
DELIVERY_RETRY_BATCH_SIZE=20

# APNs configuration
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=
APNS_PRIVATE_KEY=

# FCM configuration
FCM_CREDENTIALS=./secrets/firebase-service-account.json
